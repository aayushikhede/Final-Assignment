<?xml version="1.0" encoding="UTF-8"?>

<web-app>

	<servlet>

		<servlet-name>Validation</servlet-name>
		<servlet-class>com.webAppLogin.SourceServlet</servlet-class>
		<load-on-startup>78</load-on-startup>

	</servlet>

	<servlet-mapping>

		<servlet-name>Validation</servlet-name>
		<url-pattern>/Validate</url-pattern>

	</servlet-mapping>
	<servlet>

		<servlet-name>Connection2</servlet-name>
		<servlet-class>com.webAppLogin.ConnectionServlet2</servlet-class>

		<init-param>
			<param-name>userName</param-name>
			<param-value>root</param-value>

		</init-param>


		<init-param>
			<param-name>password</param-name>
			<param-value>root</param-value>

		</init-param>

		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:mysql://localhost:3306/servlet</param-value>

		</init-param>

		<init-param>
			<param-name>driver</param-name>
			<param-value>com.mysql.jdbc.Driver</param-value>

		</init-param>

	</servlet>

	<servlet-mapping>

		<servlet-name>Connection2</servlet-name>
		<url-pattern>/Connection2</url-pattern>

	</servlet-mapping>

	<servlet>

		<servlet-name>Connection</servlet-name>
		<servlet-class>com.webAppLogin.ConnectionServlet</servlet-class>

		<init-param>
			<param-name>userName</param-name>
			<param-value>root</param-value>

		</init-param>


		<init-param>
			<param-name>password</param-name>
			<param-value>root</param-value>

		</init-param>

		<init-param>
			<param-name>url</param-name>
			<param-value>jdbc:mysql://localhost:3306/servlet</param-value>

		</init-param>

		<init-param>
			<param-name>driver</param-name>
			<param-value>com.mysql.jdbc.Driver</param-value>

		</init-param>

	</servlet>

	<servlet-mapping>

		<servlet-name>Connection</servlet-name>
		<url-pattern>/Connection</url-pattern>

	</servlet-mapping>

</web-app>